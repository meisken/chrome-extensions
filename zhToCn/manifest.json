{
    "manifest_version": 3,
    "name": "zh-ch",
    "description": "convert between zh and ch",
    "version": "2.1",
    "permissions": [
        "scripting", 
        "activeTab",
        "contextMenus",
        "clipboardRead",
        "activeTab",
        "clipboardWrite"

    ],
    "action": {
        "default_popup": "ui/popup.html"
    },
    "background": {
        "service_worker": "script/background.js"
    },
    "content_scripts": [ 
    {
       "matches": [
            "<all_urls>"
       ],
       "js": ["script/opencc_js_full.js","script/content.js"]
    }
 ]
}

